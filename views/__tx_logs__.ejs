<p
  class="text-center md:text-left px-2 py-12 text-base md:text-2xl font-bold text-white"
>
  Recent transactions
</p>

<div class="overflow-x-auto bg-white/50 w-12/12 mx-auto md:mx-0 md:w-full">
  [/ if (transactions.length) { /]

  <table class="border border-gray-600/50 w-full">
    <tr class="text-center text-lg text-white bg-black/50 font-bold">
      <th class="py-6">Date</th>
      <th>Transaction ID</th>
      <th>Amount</th>

      <th>Details</th>
    </tr>

    [/ transactions.map((t)=>{ /]

    <tr
      class="text-center hover:bg-gray-50 cursor-pointer text-base text-black bg-gray-700/50"
    >
      <td class="py-4 px-2">[/= t.date.toLocaleString() /]</td>
      <td class="px-2">[/=t.ref/]</td>
      <td class="px-2">$/BTC [/=t.amount/]</td>
      <td class="text-sm overflow-x-auto px-2">[/=t.details/]</td>
    </tr>

    [/ }) /]
  </table>
  [/ } else { /]

  <p class="py-8 w-full bg-white/50 text-center text-lg">
    No recent transactions
  </p>

  [/ } /]
</div>
